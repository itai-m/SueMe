<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome, Display Name!"
        android:id="@+id/WelcomeHomeText" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publish a new article"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:onClick="publishArticleOnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Latest articles"
        android:id="@+id/LatestArticlesHomeText" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:id="@+id/ArticleHomeListView"
        android:layout_weight="0.30"
        android:layout_marginBottom="40dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/SearchArticleHomeEditText"
            android:hint="Search in title" />

        <Button
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/button2"
            android:layout_marginLeft="20dp"
            android:onClick="sharchArticle"/>

    </LinearLayout>

</LinearLayout>