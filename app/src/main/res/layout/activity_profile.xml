<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Display Name"
        android:id="@+id/ProfileDisplayName"
        android:textSize="25dp"
        android:textColor="#000000"
        android:minHeight="50dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PhoneNumber"
            android:id="@+id/PhoneNumberProfileText"
            android:textSize="15dp"
            android:textColor="#000000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:id="@+id/CallProfileButton"
            android:layout_marginLeft="25dp"
            android:onClick="onCallClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show location"
            android:id="@+id/GetLocationProfileButton"
            android:onClick="showLocationOnClick"
            android:layout_marginLeft="25dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gap1"
        android:minHeight="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest Articles"
        android:id="@+id/LatestArticlesProfileText"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ArticleListProfileListView"
        android:layout_gravity="center_horizontal" />

</LinearLayout>